@model LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutAccess.cshtml";
}

<head>
    <title>Login</title>
   
    <link rel="icon" href="favicon.ico">
</head>
<body>
    @*<div class="loader">
        <div class="spinner spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>*@
    <div class="row gx-0 align-items-center justify-content-center h-100 bg-white">
        <div class="col-12 col-md-5 col-lg-6 col-xl-4 my-5 px-4 px-lg-5">
            <h1 class="display-4 mb-2 text-center">Sign in</h1>
            <form asp-action="Login" class="form" method="POST" novalidate="novalidate">
                <div class="mb-3">
                    <label class="form-label" for="email">Email Address</label>
                    <input asp-for="Email" class="form-control" id="email" type="email" placeholder="Enter email" autocomplete="off">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input asp-for="Password" class="form-control" id="password" type="password" placeholder="Password" autocomplete="off">
                </div>
                <div class="form-footer mb-3">
                    <button class="btn btn-primary btn-block" type="submit">Sign in</button>
                </div>
            </form>
            <div class="text-center text-muted">
                Don't have account yet? <a href="register.html">Sign up</a>.
            </div>
        </div><!-- /.col -->
        <div class="col-12 col-md-7 col-lg-6 col-xl-8 d-none d-lg-block">
            <div class="bg-cover bg-overlay vh-100" style="background-image: url(/assets/img/bg-auth.jpg);"></div>
        </div><!-- /.col -->
    </div><!-- /.row -->
    <script src="js/main.js"></script>
</body>

